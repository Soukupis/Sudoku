                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button FontSize="25" FontFamily="Segoe MDL2 Assets" Height="50" Width="50" Content="&#xE73E;" Background="Transparent" Click="SolveProblem"/>
